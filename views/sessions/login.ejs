<%- include('../partials/head.ejs') %>
<div class="bg"></div>
<div class="bg bg2"></div>
<div class="bg bg3"></div>
<div class="d-flex justify-content-center align-items-center content">
<div >
  <h1 class="mb-5"  style="font-size: 5em;" >LIFE WITHOUT GAP</h1>
  <div >
    <% if (messages.success) { %>
      <% for (let msg of messages.success) { %>
        <div class="alert alert-success" role="alert">
          <p ><%= msg %></p>
        </div>
      <% } %>
    <% } %>
    <% if (messages.info) { %>
      <% for (let msg of messages.info) { %>
        <div class="alert alert-info" role="alert">
          <p ><%= msg %></p>
        </div>
      <% } %>
    <% } %>
    <% if (messages.error) { %>
      <% for (let msg of messages.error) { %>
        <div class="alert alert-danger " role="alert">
          <p ><%= msg %></p>
        </div>
      <% } %>
    <% } %>
  </div>
  <form action="<%= baseUrl %>/login" method="post">
    <p>
      <label for="username" class="me-3">Username</label>
      <input type="text" name="username" id="username" required />
    </p>
    <p>
      <label for="password" class="me-3">Password</label>
      <input type="password" name="password" id="password" required />
    </p>

    <input class="btn btn-primary" type="submit" value="Login" />
  <footer class="mt-5">
    <p>
      Not with us?
      <a href="/users/signup">Sign up here</a>
    </p>
  </footer>
  </form>
</div>
</div>
<%- include('../partials/footer.ejs') %>
