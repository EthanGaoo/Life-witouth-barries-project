<%- include('../partials/head.ejs') %>
<div class="container-fluid  text-center  " style="margin: auto;">
<div class="card mb-3 m-auto" style="max-width:1440px ;" >
  <div class="row g-0">
    <div class="col-xl-4  ">
      <iframe  width="auto" height="450" style="border:0" loading="lazy" allowfullscreen src="https://www.google.com/maps/embed/v1/place?q=place_id:<%=service.placeID%>&key=AIzaSyCY0hoejDASnmYDlZMBSTZ5cEUIO4m8Qjw&language=en"></iframe>
    </div>
    <div class="col-xl-8  " style="margin:auto;" >
      <div class="card-body">
        <h5 class="card-header text-center"><%=service.title%></h5>
        <p class="card-text">Phone: <%=service.phone%></p>
        <p class="card-text">Email: <%=service.email%></p>
        <p class="card-text">Address: <%=service.location%></p>
        <p class="card-text">Description: <%=service.description%></p>
        <!-- <p class="card-text">Description: <%=service.description%></p> -->
      </div>
      <div class="card-footer d-flex justify-content-around align-items-center   text-center">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#Modal" data-bs-whatever="@mdo">
          <svg xmlns="http://www.w3.org/2000/svg" width="35" height="35" fill="currentColor" class="bi bi-envelope" viewBox="0 0 16 16">
              <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z"/>
            </svg>
          </button>
          <div class="modal fade text-center" id="Modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Send enquiry</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <form>
                      <div class="row">
                      <div class="mb-3 col-6">
                        <label for="recipient-name" class="col-form-label">First Name:</label>
                        <input type="text" class="form-control" id="recipient-name" required>
                      </div>
                      <div class="mb-3 col-6">
                          <label for="recipient-name" class="col-form-label">Last Name:</label>
                          <input type="text" class="form-control" id="recipient-name" required>
                        </div>
                      </div>
                      <div class="mb-3">
                          <label for="email" class="col-form-label">Email:</label>
                          <input type="email" class="form-control" id="email" placeholder="my@email.com"></input>
                        </div>
                        <div class="mb-3">
                          <label for="phone-number" class="col-form-label">Phone number:</label>
                          <input type="text" class="form-control" id="phone-number" required></input>
                        </div>
                        <div class="mb-3">
                          <label for="suburb" class="col-form-label">Suburb:</label>
                          <input type="text" class="form-control" id="suburb"></input>
                        </div>
                      <div class="mb-3">
                        <label for="message-text" class="col-form-label">Message:</label>
                        <textarea class="form-control" id="message-text"></textarea>
                      </div>
                    </form>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">cancel</button>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#Modal1" >send</button>
                  </div>
                </div>
              </div>
            </div>
          <div class="modal fade text-center" id="Modal1" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">

                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                  <p>Enquiry Successful</p>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
          </div>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#Modal2" data-bs-whatever="@mdo">
            <svg xmlns="http://www.w3.org/2000/svg" width="35" height="35" fill="currentColor" class="bi bi-download" viewBox="0 0 16 16">
              <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z"/>
              <path d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3z"/>
            </svg>
            </button>
          <div class="modal fade text-center" id="Modal2" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Send to mobile</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                      <div class="my-3"><%=service.location%></div>
                      <div class="my-3"><%=service.phone%></div>
                      <div class="mb-3">
                          <label for="phone-number" class="col-form-label">Phone number:</label>
                          <input type="text" class="form-control" id="phone-number" required></input>
                      </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#Modal1" >send</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>

          </div>
          <a href="<%=baseUrl%>/<%=service.id%>/edit" class="button-15">Edit Service</a>
        <form action="<%=baseUrl%>/<%=service.id%>?_method=DELETE" method="post">
        <input type="submit" class="btn btn-danger"  value="Delete">
        </form>
      </div>
    </div>
  </div>
</div>
</div>




<%- include('../partials/footer.ejs') %>
