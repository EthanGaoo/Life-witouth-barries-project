<%- include('../partials/head.ejs') %>
<div class="container-fluid ">
    <div class="row ">
    <%for(let service of services){%>
            <div class="col  g-5 ">
                <div class="card text-bg-light h-100 mx-auto shadow-lg" style="width:18rem;">
                    <img src="<%=service.imageURL%>" class="card-img-top img-fluid" style="width: 286px; height: 161px;" alt="service images">
                    <div class="card-body">
                      <h5 class="card-header text-center"><%=service.title%></h5>

                      <p class="card-text text-center mt-5">
                        <svg  xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-telephone me-3" viewBox="0 0 16 16">
                          <path d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.568 17.568 0 0 0 4.168 6.608 17.569 17.569 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.678.678 0 0 0-.58-.122l-2.19.547a1.745 1.745 0 0 1-1.657-.459L5.482 8.062a1.745 1.745 0 0 1-.46-1.657l.548-2.19a.678.678 0 0 0-.122-.58L3.654 1.328zM1.884.511a1.745 1.745 0 0 1 2.612.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511z"/>
                        </svg>
                        <%=service.phone%>
                      </p>
                      <p class="card-text text-center mt-5">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt-fill me-3" viewBox="0 0 16 16">
                          <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z"/>
                        </svg><%=service.location%></p>
                    </div>
                    <!-- <div class="card-body text-end">
                      <a href="<%=baseUrl%>/<%=service.id%>" class="btn btn-primary ">Details</a>
                    </div> -->
                    <div class="card-footer d-flex justify-content-around">
                      <a href="<%=baseUrl%>/<%=service.id%>" class="btn btn-primary ">Details</a>
                      <form action="<%=baseUrl%>/<%=service.id%>?_method=DELETE" method="post">
                      <input type="submit" class="btn btn-danger"  value="Delete">
                      </form>
                    </div>
                  </div>
            </div>

    <%}%>
    </div>
</div>

<%- include('../partials/footer.ejs') %>
